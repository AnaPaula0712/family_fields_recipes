<div class="cards-banner-bg m-0" >
  <div class="row m-0">
    <div class="col-12">
      <h2 class="title mt-5 pb-3 text-center">Receitas da família Campos</h2>
      <div class="row justify-content-around mb-5 ">
        <div>
          <%= link_to 'Conheça nossa família!', home_path, class: "btn btn-info radius-15" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-around m-0">
    <% @recipes.each do |recipe| %>
      <div class="card m-3 radius-5" style="width: 13rem;">
        <div class="flat-card">
          <div>
            <%= cl_image_tag recipe.photo.key, size: '205x250' if recipe.photo.attached? %>
          </div>
          <div class="recipe-body">
            <h5 class="recipe-title"><%= recipe.name %></h5>
            <p class="recipe-text">$<%= recipe.member_family %></p>
          </div>
          <div class="card-body">
            <%= link_to 'Receita', recipe_path(recipe), class: "btn btn-outline-dark btn-sm radius-15" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
